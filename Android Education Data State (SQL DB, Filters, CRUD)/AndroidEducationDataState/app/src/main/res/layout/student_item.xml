<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Company"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSecondary"
            android:paddingHorizontal="12dp"/>

        <TextView
            android:id="@+id/companyFounder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:text="Основатель: "
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp"
            android:layout_below="@+id/companyName"/>
        <TextView
            android:id="@+id/companyProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:text="Общая ценность: "
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp"
            android:layout_below="@+id/companyFounder"/>
        <TextView
            android:id="@+id/companyAvgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:text="Средняя цена: "
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp"
            android:layout_below="@+id/companyProduct"/>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>