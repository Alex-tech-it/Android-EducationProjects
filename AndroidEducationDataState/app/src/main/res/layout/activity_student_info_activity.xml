<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentInfoActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/app_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/titleFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fullName"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tool_bar"/>
            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintFullName"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSecondary"
                android:inputType="text"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:maxLines="1"
                android:maxLength="40"
                android:background="@drawable/edit_text_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleFullName"
                android:autofillHints="" />

            <TextView
                android:id="@+id/titleGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullNameEditText"/>
            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginHorizontal="16dp"
                android:padding="4dp"
                android:background="@drawable/edit_text_style"
                android:textColor="?attr/colorOnSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleGender"/>

            <TextView
                android:id="@+id/titleLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/programLang"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/genderSpinner"/>
            <EditText
                android:id="@+id/langEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintLang"
                android:textSize="16sp"
                android:inputType="text"
                android:textColor="?attr/colorOnSecondary"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:maxLines="1"
                android:maxLength="80"
                android:background="@drawable/edit_text_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleLang"
                android:autofillHints="" />

            <TextView
                android:id="@+id/titleIDE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preferredIDE"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSecondary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/langEditText"/>
            <EditText
                android:id="@+id/ideEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintIDE"
                android:textSize="16sp"
                android:inputType="text"
                android:textColor="?attr/colorOnSecondary"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:maxLines="1"
                android:maxLength="80"
                android:background="@drawable/edit_text_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleIDE"
                android:autofillHints="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ideEditText">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDelete"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/edit_text_style"
                    android:text="@string/delete"
                    android:textColor="?attr/colorOnSecondary"
                    android:onClick="onDeleteClick"
                    app:layout_constraintEnd_toStartOf="@+id/btnDelete"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSave"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="32dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/edit_text_style"
                    android:text="@string/save"
                    android:textColor="?attr/colorOnSecondary"
                    android:onClick="onSaveClick"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>